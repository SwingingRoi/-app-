<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Work.PersonalWorkActivity">

    <LinearLayout
        android:id="@+id/Loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:onClick="refresh"
        android:orientation="vertical"
        android:visibility="invisible">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/loadinggif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/loading" />

        <TextView
            android:id="@+id/Remind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/TouchRefresh"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Normal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ActionBar"
            style="@style/actionbar"
            android:background="@drawable/gray"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backArrow3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:onClick="onBackPressed"
                app:srcCompat="?attr/actionModeCloseDrawable" />

            <ImageView
                android:id="@+id/refresh"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:onClick="refresh"
                app:srcCompat="@drawable/refresh" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_weight="1"
                android:text="@string/MakeHistory"
                android:textSize="18sp" />

            <com.example.myapplication.MySpinner
                android:id="@+id/menu"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:background="@drawable/menu"
                android:entries="@array/personalwork" />

            <ImageView
                android:id="@+id/SearchIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:onClick="toSearch"
                android:src="@drawable/search" />

        </LinearLayout>

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="530dp"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/BookTable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" />

        </ScrollView>

        <LinearLayout
            android:id="@+id/manage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:elevation="6dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:outlineProvider="bounds"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:id="@+id/check"
                style="@style/bottom_navigation"
                android:layout_height="match_parent"
                android:onClick="doDelete"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/delete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/delete"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cancel"
                style="@style/bottom_navigation"
                android:layout_height="match_parent"
                android:onClick="cancelManage"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/cancel"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>