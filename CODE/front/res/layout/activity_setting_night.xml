<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Setting.SettingActivity">

    <LinearLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3F3E3E"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/LogButton"
            android:layout_width="258dp"
            android:layout_height="48dp"
            android:background="@drawable/normal_button_style_night"
            android:onClick="doPush"
            android:textColor="#C2BEBE" />

        <Button
            android:id="@+id/changeSkin"
            android:layout_width="258dp"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/normal_button_style_night"
            android:onClick="toDay"
            android:text="@string/changeToDay"
            android:textColor="#C2BEBE" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ActionBar"
        style="@style/actionbar"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/BackArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:onClick="onBackPressed"
            app:srcCompat="?attr/actionModeCloseDrawable" />

        <TextView
            android:id="@+id/partname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingStart="20dp"
            android:paddingEnd="90dp"
            android:text="@string/settingDescription"
            android:textSize="20sp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>