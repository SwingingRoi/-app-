<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    
    <style name="bottom_navigation">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="navigation_icon">
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_width">25dp</item>
    </style>

    <style name="verify_code">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:width">30dp</item>
        <item name="android:ems">10</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLength">1</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:textColor">@drawable/lightorange</item>
        <item name="android:textSize">25sp</item>
        <item name="android:autoLink">all</item>
    </style>

    <style name="button">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:width">100dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="avatar">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="actionbar">
        <item name="android:background">@drawable/gray</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="booktag">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#ff888888</item>
        <item name="android:alpha">0.7</item>
    </style>

    <style name="Scroll">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="manageBox">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">0.1</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="editTextInNight" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#FF6D5757</item>
        <item name="colorControlActivated">#C09D9D</item>
    </style>
</resources>
